<section>
    <div class="container mt-5">
        <h1>Your Wishlist</h1>
        <div class="row">
            {{#each wishItems}}
            <div class="col-md-3 p-3">
                <div class="card" style="width: 15rem;height: 24rem;">
                    <img src="/images/product-images/{{this.product.img.[0]}}" alt="card-img-cap" class="card-img-top"
                        style="height:12rem ;">
                    <div class="card-body">
                        <h5 class="card-title">{{this.product.Name}}</h5>
                        <h5 class="card-text">Rs. {{this.product.Price}}</h5>
                        <h5 class="card-text">{{this.product.Description}}</h5>
                        <a href="/removeFromWishlist/{{this.product._id}}"><button
                                class=" btn-primary">Remove</button></a>



                    </div>
                </div>

            </div>
            {{/each}}
        </div>

    </div>
</section>