<section id="main" class="main">

  {{#if addBrandMessage}}
  <h3 id="addBrandMsg" class="text-success">{{addBrandMessage}}</h3>
  {{/if}}

  <div class="container mt-5">
    <form class="needs-validation" action=" /admin/addBrand" method="post" novalidate="">
      <div class="row">
        <div class="col-md-6">
          <h2>Add Brand</h2><br />
          <div>
            <div class="col-sm-12 col-md-7">
              <label for="">Brand Name</label>
              <input type="text" class="form-control" id="name" name="name" required="" />
              <div class="invalid-feedback">
                Please enter a Brand Name
              </div>
              <label for="">Description</label>
              <input type="text" class="form-control" id="description" name="description" required="" />
              <div class="invalid-feedback">
                Please give a Description
              </div>
              <label for="">Brand Offer</label>
              <input type="text" class="form-control" id="brandOffer" name="brandOffer" />

            </div>

            <button class="btn btn-primary float-right mt-4" type="submit" onsubmit="validateform()">Add +</button>

          </div>
        </div>

      </div>
    </form>

  </div>
</section>

<script>
  setTimeout(function () { $("#addBrandMsg").remove(); }, 2000)

</script>