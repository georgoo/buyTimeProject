        </head> 



<section id="main" class="main">
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/addproducts" class=" btn-primary btn  ms-auto" style="width :8rem">Add Product</a>
        </div>
        <table class="table table-bordered " id="tableData">
  <thead>
    <tr>
      
      <th scope="row">SI NO</th>
      <th scope="row">Name</th>
      <th scope="row">Category</th>
      <th scope="row">Price</th>
      <th>Image</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      
      <td></td>
      
      <td>{{this.Name}}</td>
      <td> {{this.Category }} </td>
      <td> {{this.Price}} </td>
      
      {{!-- <td>{{this.salary}}</td> --}}
      <td><img style="width:50px;height:50px" src="/product-images/{{this._id }}.jpg" alt=""></td>
      <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
      <a href="/admin/delete-product/{{this._id}}"  class="btn btn-danger" onclick="return confirm('Do you really want to delete{{this.Name}} ?')">Delete</a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>
</div>


