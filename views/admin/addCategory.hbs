<section id="main" class="main">

  <div class="container mt-5">
    {{#if addCategoryMessage}}
    <h3 id="addCategoryMessage" class="text-success">{{addCategoryMessage}}</h3>
    {{/if}}
    <form class="needs-validation" action=" /admin/addCategory" method="post" novalidate="">
      <div class="row">
        <div class="col-md-6">
          <h2>Add Categories</h2><br />
          <div>
            <div class="col-sm-12 col-md-7">
              <label for="">Category Name</label>
              <input type="text" class="form-control" id="name" name="name" required="" />
              <div class="invalid-feedback">
                Please enter a Category Name
              </div>
              <label for="">Description</label>
              <input type="text" class="form-control" id="description" name="description" required="" />
              <div class="invalid-feedback">
                Please give a Description
              </div>
              <label for="">Category Offer</label>
              <input type="text" class="form-control" id="categoryOffer" name="categoryOffer" />


            </div>

            <button class="btn btn-primary float-right mt-4" type="submit" onsubmit="validateform()">Add +</button>


          </div>
        </div>


      </div>
    </form>

  </div>


</section>

<script>
  setTimeout(function () { $("#addCategoryMessage").remove() }, 2000) 
</script>